{
  "name": "vscode-note-manager",
  "displayName": "vscode-note-manager",
  "description": "It provides a place for you to open file at the activity bar",
  "version": "0.0.1",
  "publisher": "vscode-note-manager",
  "repository": "https://github.com/FangHaoming/vscode-note-manager",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fileTreeExplorer",
          "title": "Note List",
          "icon": "resources/book.svg"
        }
      ]
    },
    "views": {
      "fileTreeExplorer": [
        {
          "id": "fileTreeExplorer",
          "name": "Note List"
        }
      ]
    },
    "commands": [
      {
        "command": "fileTreeExplorer.selectFolderOrFile",
        "title": "Select Folder/File",
        "icon": "resources/add.svg"
      },
      {
        "command": "fileTreeExplorer.clearAll",
        "title": "Clear All Selected"
      },
      {
        "command": "fileTreeExplorer.addFile",
        "title": "Add File"
      },
      {
        "command": "fileTreeExplorer.addFolder",
        "title": "Add Folder"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "fileTreeExplorer.selectFolderOrFile",
          "when": "view == fileTreeExplorer",
          "group": "navigation"
        },
        {
          "command": "fileTreeExplorer.clearAll",
          "when": "view == fileTreeExplorer",
          "group": "inline"
        }
      ],
      "view/item/context": [
        {
          "command": "fileTreeExplorer.addFile",
          "when": "view == fileTreeExplorer && viewItem == fileTreeExplorerFolder",
          "group": "inline"
        },
        {
          "command": "fileTreeExplorer.addFolder",
          "when": "view == fileTreeExplorer && viewItem == fileTreeExplorerFolder",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}